<%- include('./partials/header') %>

<h3>National Parks in <%= parks.state %>:</h3>
<% parks.forEach((parks) => { %>
<div>
  <p><%= parks.name %> in <%= parks.location %></p>
  <form action= "/parks" method="POST">
    <label for="review"></label>
    <textarea cols="30" rows= "5" placeholder="Share your experience with <%= parks.name %>" name = "comment_text"></textarea>
    <input type="submit" value="submit">
  </form>
  </div>
</div>
<% }); %>

<%- include('./partials/foot') %>