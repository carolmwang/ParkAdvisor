<%- include('../partials/header') %>
<h2>Welcome to your page, <%= user[0].first_name %>!</h2>
<h4>Your comments:</h4>
<p>Check the comment you want to edit, make your changes, and submit them!</p>
<div class="border">
    <% user.forEach((comment) => { %>
      <div>
          <h4><%= comment.park %></h4>
          <p><%= comment.content %></p>
          <br />
          <span><%= comment.date_created %></span>
          <form action='?_method=PUT' method="POST">
            <input type="checkbox" name="comment_id" value="<%= comment.comment_id %>">
            <label for="content">
                <textarea placeholder="Edit comment here" name="content" id="content" rows="8" cols="100"></textarea>
                <div>
                  <input type="submit" value="submit">
                </div>
            </label>
          </form>
          <form action='/user/<%= comment.comment_id %>?_method=DELETE' method="POST">
          <input type="submit" value = "Delete review">
          </form>
        </p>
      </div>
    <% }) %>
    
    </div>