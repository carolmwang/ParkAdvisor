<%- include('../partials/header') %>
<div class="columns is-centered">
  <div class="column is-half">
<h2 class="is-size-3">Welcome to your page, <%= user[0].first_name %>!</h2>
<br />
<h4 class="is-size-4">Your comments:</h4>
<p><em>Check the comment you want to edit, make your changes, and submit them!</em></p>
<br />  
    <% user.forEach((comment) => { %>
      <div class="box">
          <h4 class="is-size-6"><strong><%= comment.park %></strong></h4>
          <br />
          <p><%= comment.content %></p>
          <br />
          <span><%= comment.date_created %></span>
          <form action='?_method=PUT' method="POST">
            <input type="checkbox" name="comment_id" value="<%= comment.comment_id %>">
            <label for="content">
                <textarea placeholder="Edit comment here" name="content" id="content" rows="8" class="textarea"></textarea>
                <div>
                  <input type="submit" value="submit">
                </div>
            </label>
          </form>
          <form action='/user/<%= comment.comment_id %>?_method=DELETE' method="POST">
          <input type="submit" value = "Delete review">
          </form>
        </p>
      </div>
    <% }) %>
    
  </div>
  </div>