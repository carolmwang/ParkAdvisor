<%- include('../partials/header') %>

<div class="columns is-centered">
  <div class="column is-half">
    <form action="/auth/register" method="post">
      <h2 class="size-4">Register</h2>
      <% if (errors.length > 0) { %>
        <ul>
          <% errors.forEach((err) => { %>
            <li>
              <%= err %>
            </li>
            <% }) %>
        </ul>
        <% } %>
          <div class="field">
            <label for="username" class="label">
              Username
              <input type="text" name="username" class="input is-primary is-small">
            </label>
          </div>
          <div class="field">
            <label for="password" class="label">
              Password
              <input type="password" name="password" class="input is-primary is-small">
            </label>
          </div>
          <button type="submit" class="button is-small is-primary">Register</button>
    </form>
  </div>
</div>
<%- include('../partials/foot') %>